.input{background:#f8fafc;border:2rpx solid #e2e8f0;padding:24rpx;border-radius:16rpx;margin-bottom:20rpx;font-size:30rpx}
.input:focus{border-color:var(--primary-color);box-shadow:0 0 0 6rpx rgba(102,126,234,0.12);background:#fff}
.picker{background:#f8fafc;border:2rpx solid #e2e8f0;padding:24rpx;border-radius:16rpx;margin-bottom:20rpx}
.picker:active{border-color:var(--primary-color)}
