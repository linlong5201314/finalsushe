<view class="container">
  <view class="card" wx:if="{{dormInfo}}" style="background:linear-gradient(135deg,#007aff,#00c6ff);color:#fff;">
    <view style="display:flex;justify-content:space-between;align-items:flex-end;">
      <text style="font-size:44rpx;font-weight:bold;">{{dormInfo.number}}</text>
      <text>{{dormInfo.building}} - {{dormInfo.floor}}层</text>
    </view>
    <view style="margin-top:20rpx;">当前入住：{{dormInfo.current_occupancy}} / {{dormInfo.capacity}}</view>
  </view>
  <view class="card">
    <text style="font-weight:bold;">室友列表</text>
    <block wx:for="{{roommates}}" wx:key="student_id">
      <view class="list-item"><text>{{item.name}}</text><text>{{item.major}} {{item.grade}}</text></view>
    </block>
    <block wx:if="{{roommates.length===0}}"><view style="text-align:center;color:#999;">暂无室友</view></block>
  </view>
  <button class="btn-primary" bindtap="goChange">申请调宿</button>
</view>
