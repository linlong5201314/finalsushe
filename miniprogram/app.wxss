page {
  --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --primary-color: #667eea;
  --secondary-color: #764ba2;
  --background-color: #f7fafc;
  --text-color: #2d3748;
  --secondary-text-color: #718096;
  --border-color: #e2e8f0;
  --card-bg: rgba(255,255,255,0.95);
  background-color: var(--background-color);
  font-size: 28rpx;
  color: var(--text-color);
}
.container { min-height: 100vh; }
.card {
  background: var(--card-bg);
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 10rpx 15rpx rgba(148,163,184,0.1), 0 4rpx 6rpx rgba(148,163,184,0.05);
}
.btn-primary { background: var(--primary-gradient); color: #fff; border-radius: 40rpx; padding: 20rpx 0; }
.list-item { display: flex; justify-content: space-between; padding: 20rpx 0; border-bottom: 1rpx solid var(--border-color); }
.status { padding: 6rpx 16rpx; border-radius: 8rpx; font-size: 24rpx; }
.status-pending { background: #fff7e6; color: #fa8c16; }
.status-completed, .status-paid { background: #f6ffed; color: #52c41a; }
.status-unpaid { background: #fff1f0; color: #f5222d; }
